<body>
	<div class="container">

		<nav class="navbar navbar-default navbar-fixed-top">

		<div class="container">
			<div class="navbar-header">
				<a class="navbar-brand" href="index.jsp">ST4</a>
			</div>
			<ul class="nav navbar-nav">
				<li class="active"><a href="#"><fmt:message key="label.home"/></a></li>
				<li><a href="#">Page 1</a></li>
				<li><a href="#">Page 2</a></li>
				<li><a href="#">Page 3</a></li>
			</ul>
			<ul class="nav navbar-nav navbar-right">
				<c:choose>
					<c:when test="${not empty sessionScope.currentUser}">
						<li><a href="controller?command=logout"><span
								class="glyphicon glyphicon-log-out" /> <fmt:message key="action.log_out"/></a></li>
					</c:when>
					<c:otherwise>
						<li><a href="controller?command=signUpView"><span
								class="glyphicon glyphicon-chevron-up"></span> <fmt:message key="label.sign_up"/></a></li>
						<li><a href="controller?command=loginView"><span
								class="glyphicon glyphicon-user"></span><fmt:message key="label.login"/> </a></li>
					</c:otherwise>
				</c:choose>
				<c:if test="${fn:length(localeList) != 0}">
					<c:forEach items="${localeList}" var="localeItem">
						<c:url var="pageUrl" value="">
							<c:forEach items="${param}" var="entry">
								<c:if test="${entry.key != 'lang'}">
									<c:param name="${entry.key}" value="${entry.value}" />
								</c:if>
							</c:forEach>
							<c:param name="lang" value="${localeItem}" />
						</c:url>

						<fmt:message key="${localeItem}" var="loc" />
						<c:choose>
							<c:when
								test="${fn:toLowerCase(sessionScope.currentLocaleLocale) == fn:toLowerCase(localeItem)}">
								<li class="active">
							</c:when>
							<c:otherwise>
								<li>
							</c:otherwise>
						</c:choose>
						<a href="${pageUrl}">${loc} </a>
						</li>
					</c:forEach>
				</c:if>

			</ul>
		</div>
		</nav>
	</div>
