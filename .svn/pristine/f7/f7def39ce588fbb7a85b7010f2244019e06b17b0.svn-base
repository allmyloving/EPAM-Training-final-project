<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns="http://java.sun.com/xml/ns/javaee"
		xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
		id="WebApp_ID" version="3.0">
		<display-name>SummaryTask4</display-name>
		
		<!-- Servlets -->
		<servlet>
				<servlet-name>Controller</servlet-name>
				<servlet-class>ua.nure.serdyuk.web.Controller</servlet-class>
		</servlet>
		<servlet>
				<servlet-name>MyServlet</servlet-name>
				<servlet-class>ua.nure.serdyuk.web.MyServlet</servlet-class>
		</servlet>
		
		<!-- Filters -->
		
		<filter>
				<filter-name>AccessFilter</filter-name>
				<filter-class>ua.nure.serdyuk.web.filter.AccessFilter</filter-class>
				<init-param>
						<param-name>admin</param-name>
						<param-value>adminView stationView trainView routeView carriagesView addRoute 
							deleteRoute addStation updateStation deleteStation addTrain deleteTrain getRoutes addCarriages updateCarriage</param-value>
				</init-param>
				<init-param>
						<param-name>user</param-name>
						<param-value>orderTicket</param-value>
				</init-param>
		</filter>
		<filter-mapping>
				<filter-name>AccessFilter</filter-name>
				<url-pattern>/*</url-pattern>
		</filter-mapping>
		<filter>
				<filter-name>CleanSessionFilter</filter-name>
				<filter-class>ua.nure.serdyuk.web.filter.CleanSessionFilter</filter-class>
				<init-param>
						<param-name>commands</param-name>
						<param-value>indexView adminView logout</param-value>
				</init-param>
		</filter>
		<filter-mapping>
				<filter-name>CleanSessionFilter</filter-name>
				<url-pattern>/controller</url-pattern>
		</filter-mapping>
		<filter>
				<filter-name>CharsetFilter</filter-name>
				<filter-class>ua.nure.serdyuk.web.filter.CharsetFilter</filter-class>
		</filter>
		<filter-mapping>
				<filter-name>CharsetFilter</filter-name>
				<url-pattern>/*</url-pattern>
		</filter-mapping>
		
		<filter>
				<filter-name>LocaleFilter</filter-name>
				<filter-class>ua.nure.serdyuk.web.filter.LocaleFilter</filter-class>
				<init-param>
						<param-name>defaultLocale</param-name>
						<param-value>en</param-value>
				</init-param>
		</filter>
		<filter-mapping>
				<filter-name>LocaleFilter</filter-name>
				<url-pattern>/*</url-pattern>
		</filter-mapping>
		
		<!-- Context -->
		<context-param>
				<param-name>localeList</param-name>
				<param-value>en ru</param-value>
		</context-param>
		<context-param>
				<param-name>bundleBasename</param-name>
				<param-value>ua.nure.serdyuk.resources.strings</param-value>
		</context-param>
		<error-page>
				<error-code>404</error-code>
				<location>/WEB-INF/jsp/error/error404.jsp</location>
		</error-page>
		<error-page>
				<exception-type>java.lang.Throwable</exception-type>
				<location>/WEB-INF/jsp/error/error_main.jsp</location>
		</error-page>
</web-app>