<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>SummaryTask4</display-name>

	<!-- Servlets -->
	<servlet>
		<servlet-name>Controller</servlet-name>
		<servlet-class>ua.nure.serdyuk.web.Controller</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MyServlet</servlet-name>
		<servlet-class>ua.nure.serdyuk.web.MyServlet</servlet-class>
	</servlet>

	<!-- Filters -->
	<filter>
		<filter-name>CharsetFilter</filter-name>
		<filter-class>ua.nure.serdyuk.web.filter.CharsetFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>CharsetFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>LocaleFilter</filter-name>
		<filter-class>ua.nure.serdyuk.web.filter.LocaleFilter</filter-class>
		<init-param>
			<param-name>defaultLocale</param-name>
			<param-value>en</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>LocaleFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>


	<!-- Context init params -->
	<context-param>
		<param-name>localeList</param-name>
		<param-value>en ru</param-value>
	</context-param>
	<context-param>
		<param-name>bundleBasename</param-name>
		<param-value>ua.nure.serdyuk.resources.strings</param-value>
	</context-param>

	<!-- Error handling -->
	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/jsp/error/error404.jsp</location>
	</error-page>
	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/WEB-INF/jsp/error/error_main.jsp</location>
	</error-page>
</web-app>